<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="GuardkeyV01.Views.LoginPage"
             Shell.NavBarIsVisible="False">

    <RelativeLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Image RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
               RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
               Source="background.png" 
               Aspect="AspectFill"/>

        <StackLayout RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                     RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                     VerticalOptions="Start">

            <Image Source="logologin.png" 
                   HorizontalOptions="Center" 
                   Margin="0,50,0,0"/>

            <Label Text="Enter a password"
                   Margin="0,20,0,20"
                   FontSize="18"
                   TextTransform="Uppercase"
                   TextColor="#ffffff"
                   HorizontalOptions="Center"
                   BackgroundColor="Transparent"/>

            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="CenterAndExpand" 
                         VerticalOptions="CenterAndExpand">
                <Entry x:Name="Digit1" 
                       Placeholder="*" 
                       PlaceholderColor="#d9d9d9" 
                       MaxLength="1" 
                       Keyboard="Numeric" 
                       IsPassword="true" 
                       WidthRequest="40" 
                       TextColor="White" 
                       BackgroundColor="Transparent"/>
                <Entry x:Name="Digit2" 
                       Placeholder="*" 
                       PlaceholderColor="#d9d9d9" 
                       MaxLength="1" 
                       Keyboard="Numeric" 
                       IsPassword="true" 
                       WidthRequest="40" 
                       TextColor="White" 
                       BackgroundColor="Transparent"/>
                <Entry x:Name="Digit3" 
                       Placeholder="*" 
                       PlaceholderColor="#d9d9d9" 
                       MaxLength="1" 
                       Keyboard="Numeric" 
                       IsPassword="true" 
                       WidthRequest="40" 
                       TextColor="White" 
                       BackgroundColor="Transparent"/>
                <Entry x:Name="Digit4" 
                       Placeholder="*" 
                       PlaceholderColor="#d9d9d9" 
                       MaxLength="1" 
                       Keyboard="Numeric" 
                       IsPassword="true" 
                       WidthRequest="40" 
                       TextColor="White" 
                       BackgroundColor="Transparent"/>
            </StackLayout>
        </StackLayout>
    </RelativeLayout>
</ContentPage>





